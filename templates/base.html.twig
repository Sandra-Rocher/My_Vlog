{# Page base with navbar, footer, flash messages, basic css, meta name, bootstrap link, javascript link and arrow up #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- SEO -->
        <meta name="author" content="Rocher Sandra">
        <meta name="keywords" content="Symfony, Twig, PHP, HTML, CSS, JavaScript, Bootstrap, MySQL, vlog, vidéos">
        <meta name="description" content="Vlog de publication personnelle, publications public périodique et régulière">

        <!-- litle logo on browser page -->
        <link rel="icon" type="image/x-icon" href="{{ asset('Index_Page/LOGO_myvlog.png') }}" />

        <title>{% block title %}My_Vlog{% endblock %}</title>
        
        {# Bootstrap Link css #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">        

        {# Bootstrap icons #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

        {# meteo script jquery #}
        {# <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> #}


        {% block stylesheets %}
            {# find all css style on assets/styles/app.css #}
            <style> </style>
        {% endblock %}

    </head>
    <body>

    {# Script js bootstrap for delete modal #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script data-navigate-once src="bootstrap.js"></script>
    {# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> #}


        {# NAVBAR : before the body #}
        {% include "partials/navbar.html.twig" %}


        {# Arrow up (green) #}
        <a href="#" id="back-to-top" title="Back to top"><i class="bi bi-arrow-up"></i></a>


        <div class="container my-4">
            {# Flash messages : for answer sucess or error #}
            {% include 'partials/flash.html.twig' %}
            
            {% block body %}  {% endblock %}
        </div>


        {# FOOTER after the body #}
        {% include "partials/footer.html.twig" %}


        {% block javascripts %}
            {% block importmap %} {{ importmap('app') }} {% endblock %}
        {% endblock %}

    </body>
</html>
