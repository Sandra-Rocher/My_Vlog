{# Template of form contact :  #}

{% extends 'base.html.twig' %}

{% block title %}My_Vlog Contact{% endblock %}

{% block body %}
<style>
    .btn-custom {
        background-color: #65b868;
        color: white;
        border: none;
    }

    .btn-custom:hover {
        background-color: black;
        color: white;
    }
</style>

<div class="general-div">
    <div class="container mt-4">
        <h1 class="mb-5">Nous contacter</h1>

        {{ form_start(form) }}
        
        <div class="mb-2 row">
            <div class="col-md-6 col-12 mb-3">
                {{ form_row(form.lastName) }}
            </div>
            <div class="col-md-6 col-12 mb-3">
                {{ form_row(form.firstName) }}
            </div>
        </div>

        <div class="mb-2 row">
            <div class="col-md-6 col-12 mb-3">
                {{ form_row(form.subject) }}
            </div>
            <div class="col-md-6 col-12 mb-3">
                {{ form_row(form.city) }}
            </div>
        </div>

        <div class="mb-2 row">
            <div class="col-md-6 col-12 mb-3">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6 col-12 mb-3">
                {{ form_row(form.phone) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
