{# Template of form contact :  #}

{% extends 'base.html.twig' %}

{% block title %}My_Vlog Contact{% endblock %}

{% block body %}
<style>
    .btn-custom {
        background-color: #65b868;
        color: white;
        border: none;
    }

    .btn-custom:hover {
        background-color: black;
        color: white;
    }
</style>

<div class="general-div">
    <h1 class="mb-5">Nous contacter</h1>

    {{form_start(form)}}
        <div class="d-flex justify-content-evenly">
            {{form_row(form.lastName)}}
            {{form_row(form.firstName)}}
            {{form_row(form.subject)}}
        </div>
        <div class="d-flex justify-content-evenly">
            {{form_row(form.city)}}
            {{form_row(form.email)}}
        </div>
    {{form_end(form)}}
</div>
{% endblock %}
