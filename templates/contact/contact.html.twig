{# Template of form contact :  #}

{% extends 'base.html.twig' %}

{% block title %}My_Vlog Contact{% endblock %}

{% block body %}
<style>
    .btn-custom {
        background-color: #65b868;
        color: white;
        border: none;
    }

    .btn-custom:hover {
        background-color: black;
        color: white;
    }

    .required-star {
        color: red;
        margin-left: 5px;
    }
</style>

<div class="general-div">
    <div class="container mt-4">
        <h1 class="mb-5">Nous contacter</h1>

        {{ form_start(form) }}

        <div class="mb-2 row">
            <div class="col-md-6 col-12 mb-3">
                <label>{{ form_label(form.lastName) }}<span class="required-star">*</span></label>
                {{ form_widget(form.lastName) }}
                {{ form_errors(form.lastName) }}  {# Show error message #}
            </div>
            <div class="col-md-6 col-12 mb-3">
                <label>{{ form_label(form.firstName) }}<span class="required-star">*</span></label>
                {{ form_widget(form.firstName) }}
                {{ form_errors(form.firstName) }}  {# Show error message #}
            </div>
        </div>

        <div class="mb-2 row">
            <div class="col-md-6 col-12 mb-3">
                <label>{{ form_label(form.subject) }}<span class="required-star">*</span></label>
                {{ form_widget(form.subject) }}
                {{ form_errors(form.subject) }}  {# Show error message #}
            </div>
            <div class="col-md-6 col-12 mb-3">
                <label>{{ form_label(form.city) }}<span class="required-star">*</span></label>
                {{ form_widget(form.city) }}
                {{ form_errors(form.city) }}  {# Show error message #}
            </div>
        </div>

        <div class="mb-2 row">
            <div class="col-md-6 col-12 mb-3">
                <label>{{ form_label(form.email) }}<span class="required-star">*</span></label>
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}  {# Show error message #}
            </div>
            <div class="col-md-6 col-12 mb-3">
                <label>{{ form_label(form.phone) }}<span class="required-star">*</span></label>
                {{ form_widget(form.phone) }}
                {{ form_errors(form.phone) }}  {# Show error message #}
            </div>
        </div>

        <div class="mb-2 row">
            <div class="col-md-12 col-12 mb-3">
                <label>{{ form_label(form.message) }}<span class="required-star">*</span></label>
                {{ form_widget(form.message) }}
                {{ form_errors(form.message) }} {# Show error message #}
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
