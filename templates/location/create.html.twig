{# Page for create a New video #}

{% extends 'base.html.twig' %}

{% block title %}Formulaire d'édition vidéo :{% endblock %}

{% block body %}
<style>
    h1 {
        margin-bottom: 50px;
    }

    .btn{
        background-color:#65b868;
    }
</style>

<div class="general-div">
    <h1>Créer une vidéo :</h1>
        {{ form_start(form) }}
            <div class="d-flex justify-content-evenly"> 
                {{ form_row(form.slug) }}
                {{ form_row(form.state) }}
            </div>
            <div class="d-flex justify-content-evenly"> 
                {{ form_row(form.duration) }}
                {{ form_row(form.category) }}
                {{ form_row(form.calendar) }}
            </div>
        {{ form_end(form) }}
</div>
{% endblock %}